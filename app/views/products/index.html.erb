<%= form_tag ({controller: 'products',
    action: 'add',
    method: 'post'}) do %>


    Product: <input name=product>

    Product: <input name=item>

    <input type=submit value='add to cart'>
  <% end %>

<% if @cart %>
  <% @cart.each do |product| %>
    <%= product %><br>
  <% @cart.each do |item| %>
    <%= item %><br>
  <% end %>
<% end %>
